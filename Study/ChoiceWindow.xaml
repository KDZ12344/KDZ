<Window x:Class="Study.ChoiceWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Study"
        mc:Ignorable="d"
        Title="MainWindow" Height="513.105" Width="450" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Margin="33,46,40.2,103.4" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.127"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBlock Foreground="White" Margin="142,35.4,239.2,66.4" Grid.Row="2" x:Name="AgeTextBlock">age</TextBlock>
        <TextBlock Foreground="Wheat" Margin="225,35.4,122.2,66.4" Grid.Row="2" x:Name="LoginTextBlock">login</TextBlock>
        <TextBlock Foreground="Wheat" Margin="10,35.4,340.2,62.4" Grid.Row="2"><Run Text="Can help with:"/></TextBlock>
        <ListBox x:Name="CanHelpWithListBox" Margin="0,63.4,0.2,32.4" Grid.Row="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Interest.Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Background ="Indigo" Margin="249,9.6,36.2,63.2" Grid.Row="3" Foreground="White" FontSize="30" Click="Button_Next">NEXT</Button>
        <Button Background ="Indigo" Margin="33,9.6,252.2,63.2" Grid.Row="3" Foreground="White" FontSize="30" x:Name="Button_Text" Click="Button_Text_Click">TEXT</Button>
        <Button Background ="Indigo" Margin="366,98.6,0.2,0.2" Grid.Row="3" Foreground="White" FontSize="10" Click="Button_Click">My profile</Button>

    </Grid>
</Window>
